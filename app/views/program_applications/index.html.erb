<div class="page-header">
  <h1>
    Program applications
    <a href="/program_applications/new" class="btn btn-lg btn-success">New Program application</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Summer program</th>
        <th>Reason for choosing</th>
        <th>Notes</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @program_applications.each do |program_application| %>
      <tr>
        <td><%= program_application.summer_program_id %></td>
        <td><%= program_application.reason_for_choosing %></td>
        <td><%= program_application.notes %></td>
        <td><%= program_application.user_id %></td>
        <td>
          <a href="/program_applications/<%= program_application.id %>" class="btn btn-primary">Show</a>
          <a href="/program_applications/<%= program_application.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_program_application/<%= program_application.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
