<div class="page-header">
  <h1>
    Scholarship applications
    <a href="/scholarship_applications/new" class="btn btn-lg btn-success">New Scholarship application</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Link to application</th>
        <th>Essays</th>
        <th>User</th>
        <th>Scholarship amount</th>
        <th>Application deadline</th>
        <th>Summer program</th>
        <th>Actions</th>
      </tr>

      <% @scholarship_applications.each do |scholarship_application| %>
      <tr>
        <td><%= scholarship_application.link_to_application %></td>
        <td><%= scholarship_application.essays %></td>
        <td><%= scholarship_application.user_id %></td>
        <td><%= scholarship_application.scholarship_amount %></td>
        <td><%= scholarship_application.application_deadline %></td>
        <td><%= scholarship_application.summer_program_id %></td>
        <td>
          <a href="/scholarship_applications/<%= scholarship_application.id %>" class="btn btn-primary">Show</a>
          <a href="/scholarship_applications/<%= scholarship_application.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_scholarship_application/<%= scholarship_application.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
